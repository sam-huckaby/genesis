{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "resolveJsonModule": true,
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["src"]
}
